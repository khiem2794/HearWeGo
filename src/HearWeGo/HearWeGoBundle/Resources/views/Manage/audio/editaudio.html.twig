{% extends('@HearWeGoHearWeGo/Manage/audio/addaudio.html.twig') %}

{% block mainpageheader %}
    <h1 class="page-heading">EDIT AUDIO</h1>
{% endblock %}


{% block mainpagecontainerheader %}
    <h3 class="block-title">Edit {{ audio.name }}</h3>
{% endblock %}

{% block mainpagecontainer %}

    {% for flashMessage in app.session.flashbag.get('status') %}
        <div class="flash-notice">
            {{ flashMessage }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
    <div class="col-md-7 block">
        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control input-lg', 'placeholder': 'Enter Name'}  }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.audio,null,  { 'label_attr': {'id': 'imgpath'} }  ) }}
            <br>
            <a href="{{ audio.getWebPath }}">Old Audio</a>
            {{ form_widget(form.audio, { 'attr' : { 'class' : 'form-control' }  }) }}
        </div>
        <div class="form-group">
            {{ form_label(form.destination) }}
            {{ form_widget(form.destination, { 'attr' : { 'class' : 'form-control'}  }) }}
        </div>
        {{ form_widget(form.submit , { 'attr' : { 'class' : 'btn btn-primary', 'label': 'Enter'}  }) }}
    </div>
    {{ form_end(form) }}

{% endblock %}