{% extends('admin/admin.html.twig') %}

{% block mainpageheader %}
    <h1 class="page-heading">AUDIO MANAGEMENT</h1>
{% endblock %}


{% block mainpagecontainerheader %}
    <h3 class="block-title">Audios</h3>
{% endblock %}


{% block mainpagecontainer %}
    <h3 class="block-title">Brief details</h3>
    <div class="block">
        <div class="block-content">
            <table class="table">
                <thead>
                <tr>
                    <th class="text-center" style="width: 50px;">#</th>
                    <th>Name</th>
                    <th>Destination</th>
                    <th class="text-center" style="width: 100px;">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for audio in audios %}
                    <tr>
                        <td class="text-center">{{ audio.id }}</td>
                        <td>{{ audio.name }}</td>
                        <td>{{ audio.destination.name }}</td>
                        <td>
                            <a href="{{ path('edit_audio',{'id':audio.id}) }}"><button class="btn btn-xs btn-default" type="button" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil"></i></button></a>
                            <button class="btn btn-xs btn-default" type="button" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}








