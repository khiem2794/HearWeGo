{% extends('admin/admin.html.twig') %}

{% block mainpageheader %}
    <h1 class="page-heading">DESTINATION MANAGEMENT</h1>
{% endblock %}


{% block mainpagecontainerheader %}
    <h3 class="block-title">Destinations</h3>
{% endblock %}


{% block mainpagecontainer %}
    <div class="block">
        <div class="block-content">
            <table class="table">
                <thead>
                <tr>
                    <th class="text-center" style="width: 50px;">#</th>
                    <th>Name</th>
                    <th class="hidden-xs" style="width: 70%">Article</th>
                    <th>Location</th>
                    <th class="text-center" style="width: 100px;">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for destination in destinations %}
                    <tr>
                        <td class="text-center">{{ destination.id }}</td>
                        <td>{{ destination.name }}</td>
                        <td>
                            {% set seg=destination.article|split('.') %}
                            {{ seg[0]|raw }}
                        </td>
                        <td>{{ destination.location }}</td>
                        <td>
                            <a href="{{ path('edit_destination',{'id':destination.id}) }}"><button class="btn btn-xs btn-default" type="button" data-toggle="tooltip" title="Edit"><i class="fa fa-pencil"></i></button></a>
                            <a href="{{ path('delete_destination',{'id':destination.id}) }}"><button class="btn btn-xs btn-default" type="button" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}