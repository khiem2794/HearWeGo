<div class="form-group">
    <label>Email address</label>
    {#<input type="email" class="form-control" id="Email" placeholder="Email">#}
    {{ form_start(form) }}
    {{ form_widget(form.email,{'attr':{'class':'form-control','id':'Email','placeholder':'Email' }}) }}
</div>
<div class="row">
    <div class="form-group col-md-6">
        <label>Password</label>
        {#<input type="password" class="form-control" id="Password" placeholder="Password">#}
        {{ form_widget(form.password,{'attr':{'class':'form-control','id':'Password','placeholder':'Password' }}) }}
    </div>
    <div class="form-group col-md-6">
        <label>Confirm Password</label>
        {#<input type="password" class="form-control" id="confPass" placeholder="Enter Password again">#}
        {{ form_widget(form.confirm,{'attr':{'class':'form-control','id':'confPass','placeholder':'Enter password again' }}
        ) }}
    </div>
</div>
<div class="row">
    <div class="form-group col-md-6">
        <label>First Name</label>
        {#<input type="text" class="form-control" id="Fname" placeholder="First name">#}
        {{ form_widget(form.firstName,{'attr':{'class':'form-control','id':'Fname','placeholder':'First name' }}) }}
        <!-- label>Last Name</label>
        <input type="text" class="form-control" id="Lname" placeholder="Last name"> -->
    </div>
    <div class="form-group col-md-6">
        <label>Last Name</label>
        {#<input type="text" class="form-control" id="Lname" placeholder="Last name">#}
        {{ form_widget(form.lastName,{'attr':{'class':'form-control','id':'Lname','placeholder':'Last name' }}) }}
    </div>
</div>
<div class="form-group">
    <label>Date of Birth</label>
    {#<select id="year"></select>#}
    {#<select id="month"></select>#}
    {#<select id="day"></select>#}
    {{ form_widget(form.dateOfBirth) }}
</div>
<div class="form-group">
    <label>Phone number</label>
    {#<input type="text" class="form-control" id="PhoneNum" placeholder="Telephone number">#}
    {{ form_widget(form.phone,{'attr':{'class':'form-control','id':'PhoneNum','placeholder':'Telephone number' }}) }}
</div>
<div class="modal-footer">
    {#<button type="button" class="reg-submit btn btn-default"><img src="{{ asset('bundles/hearwegohearwego/images/homepage/signup_btn.png') }}"></button>#}
    {{ form_widget(form.submit,{'attr':{'class':'reg-submit' }}) }}
    {{ form_end(form) }}
    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>