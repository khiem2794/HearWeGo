
{{ form_start(form) }}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <img class="avatar" src="{{ asset('bundles/hearwegohearwego/images/homepage/User.png') }}" >
        <img class="modal-title title" src="{{ asset('bundles/hearwegohearwego/images/homepage/login_title.png') }}">
    </div>

    <div class="modal-body">
        <button class="fb_signin" type="button"><img src="{{ asset('bundles/hearwegohearwego/images/homepage/fb_login.png') }}"></button>
        <div class="form-group input-group">
            <span class="input-group-addon" id="id_addon"><img src="{{ asset('bundles/hearwegohearwego/images/homepage/ID.png') }}" class="id_icon"></span>
            {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control', 'id' : 'Email', 'placeholder': 'Email', 'aria-describedly' : 'id_addon'} } ) }}

        </div>
        <div class="form-group input-group">
            <span class="input-group-addon" id="pass_addon"><img src="{{ asset('bundles/hearwegohearwego/images/homepage/pass.png') }}" class="pass_icon"></span>
            {{ form_widget(form.password , { 'attr' : { 'class' : 'form-control', 'id': 'password', 'placeholder': 'Password', 'aria-describedly': 'pass_addon'} } ) }}

        </div>
        <div class="row">
            <div class="form-group col-md-6" ><a href="#">Forgot Password</a></div>
            <div class="form-group col-md-6">
                <label><input type="checkbox" name="remember"> Remember Me!</label>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        {{ form_widget(form.submit, { 'attr': { 'class':'log-submit btn btn-default', 'type':'button' } }) }}
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
{{ form_end(form) }}