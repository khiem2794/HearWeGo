<html>

<head>
    <title>User Profile</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="{{ asset('bundles/hearwegohearwego/css/bootstrap.min.css') }}" rel="stylesheet" type="text/css">
    <link href="{{ asset('bundles/hearwegohearwego/css/profile.css') }}" rel="stylesheet" type="text/css">
    <script src="{{ asset('bundles/hearwegohearwego/js/jquery-2.1.4.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/js/bootstrap.min.js') }}"></script>
    <link rel="stylesheet" id="css-main" href="{{ asset('bundles/hearwegohearwego/oneUI/css/oneui.css') }}">

</head>

<body>
    <div id="toppage">
        <img src="{{ asset('bundles/hearwegohearwego/images/banner.png') }}" style="width:100%">
    </div>
    <div class="container" align="center">
        <img src="{{ asset('bundles/hearwegohearwego/images/personal/profile.png') }}" style="height:40px">
        <div class="col-md-6">
            <img src="{{ asset('bundles/hearwegohearwego/images/personal/avatar.png') }}" style="width:250px;margin-top: 10px">
            {{ form_start(form) }}
            <h3>{{ form.firstName.vars.data }} {{ form.lastName.vars.data }}</h3>
        </div>
        <div class="col-md-6" style="text-align:left" id="info">
            <h4>Personal Information</h4>
            <p>
                First name: {{ form_widget(form.firstName,{'attr':{'size':'30','class':'infotext'}}) }}
            </p>
            <p>
                Last name: {{ form_widget(form.lastName,{'attr':{'size':'30','class':'infotext'}}) }}
            </p>
            <div>
                Date of Birth: {{ form_widget(form.dateOfBirth,{'attr':{'class':'infotext'}}) }}
            </div>
            <h4>Contact Information</h4>
            <p>
                Email: {{ form_widget(form.email,{'attr':{'size':'30','class':'infotext'}}) }}
            </p>
            <p>
                Phone: {{ form_widget(form.phone,{'attr':{'size':'30','class':'infotext'}}) }}
            </p>
            <p>
                New Password: {{ form_widget(form.password,{'attr':{'size':'30','class':'infotext'}}) }}
            </p>
            <p>
                Old Password: {{ form_widget(form.confirm,{'attr':{'size':'30','class':'infotext'}}) }}
            </p>
            {{ form_widget(form.submit,{'attr':{'class':'my-custom-button'}}) }}
            {{ form_end(form) }}
        </div>
    </div>
    <div class="container" align="center">
        <img src="{{ asset('bundles/hearwegohearwego/images/personal/purchase.png') }}" style="height:40px">


        <div class="col-md-2"></div>
        <div class="table-responsive col-md-10">
            <table class="table table-striped table-vcenter">
                <thead>
                <tr>
                    <th style="width: 19%;">Order Number</th>
                    <th style="width: 20%;">Date</th>
                    <th style="width: 20%;">Price</th>
                    <th style="width: 15%;">Status</th>
                    <th class="text-center" style="width: 100px;">Download</th>
                </tr>
                </thead>
                <tbody>
                {%  for order in orders  %}
                    <tr>
                        <td class="font-w600">{{ order.id }}</td>
                        <td>{{ order.date|date('M d, Y') }}</td>
                        <td>{{ order.audios.price }} $</td>
                        <td>
                            <span class="label label-success">Success</span>
                        </td>
                        <td class="text-center">
                            <a href="{{ order.audios.getWebPath }}" target="_blank" class="btn btn-primary btn-xs">Go To Page</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    </div>

    <!-- OneUI Core JS: jQuery, Bootstrap, slimScroll, scrollLock, Appear, CountTo, Placeholder, Cookie and App.js -->
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/jquery.slimscroll.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/jquery.scrollLock.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/jquery.appear.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/jquery.countTo.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/jquery.placeholder.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/js.cookie.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/app.js') }}"></script>

</body>

</html>