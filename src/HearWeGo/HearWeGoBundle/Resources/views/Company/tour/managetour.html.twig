{% extends('company/company_base.html.twig') %}

{% block title %}
    <title>Manage Tour</title>
{% endblock %}

{% block cssinclude %}
    <link rel="stylesheet" id="css-main" href="{{ asset('bundles/hearwegohearwego/oneUI/css/oneui.css') }}">
{% endblock %}


{% block mainpageheader %}
    <h1 class="page-heading">Manage Tour</h1>
{% endblock %}



{% block content %}
    <div class="col-md-2"></div>
    <div class="table-responsive col-md-10">
        <table class="table table-striped table-vcenter">
            <thead>
            <tr>
                <th>Tour's Name</th>
                <th style="width: 19%;">Start Date</th>
                <th style="width: 15%;">Price</th>
                <th style="width: 20%;">Link</th>
                <th style="width: 15%;">Status</th>
                <th class="text-center" style="width: 100px;">Actions</th>
            </tr>
            </thead>
            <tbody>
            {%  for tour in tours  %}
            <tr>
                <td class="font-w600">{{ tour.name }}</td>
                <td>{{ tour.startDate|date('d-M-Y') }}</td>
                <td>{{ tour.price }} $</td>
                <td><a href="{{ tour.link }}" target="_blank" class="btn btn-primary btn-xs">Go To Page</a></td>
                <td>
                    {% if "now"|date('Y-m-d') > tour.startdate|date('Y-m-d') %}
                        <span class="label label-danger">Expire</span>
                    {% elseif tour.status == 0 %}
                        <span class="label label-warning">Waiting</span>
                    {% else %}
                        <span class="label label-success">Approved</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    <div class="btn-group">
                        <a href="{{ path('company_update_tour', { 'id': tour.id } ) }}"><button class="btn btn-xs btn-default" type="button" data-toggle="tooltip" title="Edit Client"><i class="fa fa-pencil"></i></button></a>
                        <button class="btn btn-xs btn-default" type="button" data-toggle="tooltip" title="Remove Client"><i class="fa fa-times"></i></button>
                    </div>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}




{% block jsinclude %}

{% endblock %}

{% block jscode %}
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/bootstrap.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/jquery.slimscroll.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/jquery.scrollLock.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/jquery.appear.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/jquery.countTo.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/jquery.placeholder.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/core/js.cookie.min.js') }}"></script>
    <script src="{{ asset('bundles/hearwegohearwego/oneUI/js/app.js') }}"></script>
{% endblock %}