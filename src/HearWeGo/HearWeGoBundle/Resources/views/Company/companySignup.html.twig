<html>
    <head>
        <title>Company Signup</title>
        <link rel="stylesheet" href="{{ asset('bundles/hearwegohearwego/css/company/companySignup.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/hearwegohearwego/css/bootstrap.min.css') }}">
    </head>
    <body>
        <div class="container-fluid no-inset">
            <div id="home-page" class="row my-page page-home no-offset">
                <div class="col-md-12 no-inset">
                    <!--Banner/header-->
                    <div class="row my-banner no-offset">
                    <!--<div class="col-md-12">-->
                    <img src="{{ asset('bundles/hearwegohearwego/images/homepage/banner.png') }}"/>
                    <!--</div>-->
                    </div>
                <!--End Banner/header-->
                </div>
                <div class="text text-center">
                    {{ form_start(form) }}
                    <div class="form-group">
                        {{ form_label(form.name,null) }}
                        {{ form_widget(form.name, { 'attr' : { 'class' : 'form-control'}  }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email,null) }}
                        {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control'}  }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password,null) }}
                        {{ form_widget(form.password, { 'attr' : { 'class' : 'form-control'}  }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.phone,null) }}
                        {{ form_widget(form.phone, { 'attr' : { 'class' : 'form-control'}  }) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.address,null) }}
                        {{ form_widget(form.address, { 'attr' : { 'class' : 'form-control'}  }) }}
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </body>
</html>